// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-1: '(min-width: 25em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 50em)'
    bp-4: '(min-width: 60em)'
}

// -------------------
// Typefaces
// -------------------
$didot = 'GFS Didot'
$didot-hash = 'didot'
$opensans = 'Open Sans'
$opensans-hash = 'opensans'

$sans = $opensans, sans-serif
$serif = $didot, serif
$mono = Consolas, Monaco, 'Courier New', monospace

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 1000
}

// Color
$off-black = #2a2a2a
$gray-dark = #666
$gray = #999
$gray-light = #ccc
$off-white = #efefef
$primary= #f33

$column-width = 40rem

$root-size = 17px

$type-size = {
    xx-small: {
        size: 10px,
        line-height: 1.5
    }
    x-small: {
        size: 12px,
        line-height: 1.5    
    }
    small: {
        size: 14px,
        line-height: 1.5
    }
    medium: {
        size: $root-size,
        line-height: 1.7
    }
    large: {
        size: 24px,
        line-height: 1.5
    }
    x-large: {
        size: 32px,
        line-height: 1.2
    }
    xx-large: {
        size: 48px,
        line-height: 1.2
    }
    xxx-large: {
        size: 64px,
        line-height: 1.2
    }
}
